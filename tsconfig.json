{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "skipDefaultLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "lib": ["es2015"],
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "lib"]
}
